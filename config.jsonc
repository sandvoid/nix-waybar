{
  "layer": "top",
  "position": "top",
  "font": "Iosevka Nerd Font 10",
  "modules-left": ["hyprland/window"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    "network",
    "pulseaudio",
    "battery",
    "custom/power",
    "clock",
    "tray"                                        
  ],

"hyprland/workspaces": {
  "format": "{icon}"
},

  "custom/power": {
  "format": "  ",
  "tooltip": "󰌾 Lock 󰤄 Sleep 󰗼 Logout 󰜉 Reboot 󰐥 Shutdown", 
  "on-click": "/home/sandesh/.config/waybar/scripts/power-menu.sh",
  "interval": 0
},

   "network": {
   "format-wifi": " ",
   "format-ethernet": "󰈀 Wired",
   "format-disconnected": "",
   "tooltip": true,
        "states": {
        "good": 80,
        "warning": 40,
        "critical": 20
    },
},

  "pulseaudio": {
    "format": "{icon}",
    "format-muted": " 󰖁 ",           
    "format-icons": {             
    "default": [" ", " "],
  },
    "on-click": "pavucontrol"
},


  "battery": {
    "format": "{icon}",
    "tooltip": true,
    "format-charging": "  ",
    "format-icons":  [" ", " ", " ", " ", " "]
},
   
 "clock": {
  "format": "{:%H:%M}"
  }
}
